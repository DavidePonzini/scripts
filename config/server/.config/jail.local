[DEFAULT]
ignoreip = 127.0.0.1/8
bantime = 31536000              # 1 year
findtime = 600
maxretry = 3
backend = auto
usedns = warn
destemail = davide.ponzini95@gmail.com
sendername = Fail2Ban
banaction = iptables-multiport
mta = sendmail
protocol = tcp
chain = INPUT
action_ = %(banaction)...
action_mw = %(banaction)...
protocol="%(protocol)s"...
action_mwl = %(banaction)s...

[sshd]
enabled = true
port = 2222
filter = sshd
logpath = /var/log/auth.log
