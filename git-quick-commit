#!/bin/bash -e

if [ -z "$(git status --porcelain)" ]; then
	echo 'Nothing to commit. Exiting.'
	exit 0
fi

git add .
git status

echo -ne '\033[01;34mReason:\033[m '
read r

if [ -z "$r" ]; then
	r="Quick commit - `date +%d%m%y`"
	echo -e "\033[34mUsing default commit message:\033[m $r"
fi

git commit -m "$r"
git push
