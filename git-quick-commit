#!/bin/bash -e

source $SCRIPTS/lib/messages

if [ -z "$(git status --porcelain)" ]; then
	echo 'Nothing to commit. Exiting.'
	exit 0
fi

git add .
git status

r=`_msg_ask 'Reason'`

if [ -z "$r" ]; then
	r="Quick commit - `date +%d%m%y`"
	_colored_text_n $_TEXT_STYLE_NORMAL $_TEXT_COLOR_YELLOW $_TEXT_BACKGROUND_NONE "Using default commit message: "
	_colored_text $_TEXT_STYLE_ITALIC $_TEXT_COLOR_YELLOW $_TEXT_BACKGROUND_NONE "$r"
fi

git commit -m "$r"
git push
